<link rel="stylesheet" href="~/css/site.css" />

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Guia Digital para Idosos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script>
        function aumentarFonte() {
            document.body.style.fontSize = "1.5em";
        }
        function fonteNormal() {
            document.body.style.fontSize = "1em";
        }
    </script>
</head>
<body>
    <header style="background-color:#326fa8; color:white; padding:16px; font-size:1.5em">
        <a asp-page="/Index" style="color:white; text-decoration:none; margin-right:20px;">Início</a>
        <a asp-page="/Apps" style="color:white; text-decoration:none; margin-right:20px;">Tutoriais de Apps</a>
        <a asp-page="/Dicas" style="color:white; text-decoration:none;">Dicas de Segurança</a>
        <button onclick="aumentarFonte()" aria-label="Aumentar fonte" style="margin-left:30px;">A+</button>
        <button onclick="fonteNormal()" aria-label="Fonte normal">A</button>
    </header>
    <main class="container" style="margin:32px;">
        @RenderBody()
    </main>
    <footer style="background:#eee; text-align:center; padding:10px;">Guia Digital para Idosos 2025</footer>
</body>
</html>
